@model IEnumerable<ZTP.Models.Word>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary my-2 my-sm-0">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PolishWord)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ForeignLanguageWord)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PolishWord)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForeignLanguageWord)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary my-2 my-sm-0">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary my-2 my-sm-0">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary my-2 my-sm-0">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
